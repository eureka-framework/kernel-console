{
  "name": "eureka/kernel-console",
  "description": "Kernel for Eureka Framework. Define console application kernel versions",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Kernel\\Console\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Kernel\\Console\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },

  "require": {
    "php": "7.4.*||8.0.*||8.1.*||8.2.*",
    "eureka/component-console": "^5.1",

    "symfony/config": "^5.4",
    "symfony/dependency-injection": "^5.4",
    "symfony/finder": "^5.4",
    "symfony/yaml": "^5.4"
  },

  "require-dev": {
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "symfony/cache": "^5.4"
  }
}
